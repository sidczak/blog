{% extends 'BlogBundle::base.html.twig' %}
{% block body -%}
{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extends your base template, like base.html.twig #}

<div class="container">
    
    <div class="row">    
    	<div class="col-lg-12">
            <div class="page-header">
                <h2>Login</h2>
            </div>
    	</div>
    </div>
    <div class="row">    
    	<div class="col-lg-offset-3 col-lg-6">
            
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title"><h3>Please sign in</h3></div>
                </div>
                <div class="panel-body">

                    <form action="{{ path('blog_frontend_login_check') }}" method="post">

                        <div class="form-group {% if error %} has-error {% endif %}">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="form-group {% if error %} has-error {% endif %}">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" id="password" name="_password" />
                            {% if error %}
                                <small class="help-block">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                            {% endif %}
                        </div>

                        {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                        #}
                        <div class="form-group text-center">
                            <button class="btn btn-primary" type="submit">Login</button>
                        </div>

                    </form>
                </div>
                <div class="panel-footer">
                    <div class="login-links">
                        {#<p><a href="{{ path('_starter-template_basic-remind') }}">Forgot password?</a></p>#}
                        <p><a href="{{ path('blog_user_registration') }}">Don't have an account? <b>Sign Up</b></a></p>
                    </div>
                </div>
            </div>
    
    	</div>
    </div>
</div>
{% endblock %}